    "modules-left": [
        "hyprland/workspaces",
        "custom/media"
    ],
    // "modules-center": [
    //     "hyprland/window"
    // ],
    "modules-right": [
        "idle_inhibitor",
        "disk",
        "cpu",
        "memory",
        "temperature",
        "pulseaudio",
        "clock",
        "tray",
        "custom/notification"
    ],
    "custom/notification": {
        "tooltip": false,
        // Uncomment for showing number
        // "format": "{} {icon}",
        "format": "{icon} ",
